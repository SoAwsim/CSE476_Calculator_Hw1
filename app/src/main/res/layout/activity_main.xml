<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_result_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@id/guideline_result_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_operation_openpar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="("
        app:layout_constraintBottom_toTopOf="@+id/button_number_7"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_closepar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_result_area" />

    <Button
        android:id="@+id/button_operation_closepar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text=")"
        app:layout_constraintBottom_toTopOf="@+id/button_number_8"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_percent"
        app:layout_constraintStart_toEndOf="@+id/button_operation_openpar"
        app:layout_constraintTop_toTopOf="@id/guideline_result_area" />

    <Button
        android:id="@+id/button_operation_percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="%"
        app:layout_constraintBottom_toTopOf="@+id/button_number_9"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_divide"
        app:layout_constraintStart_toEndOf="@+id/button_operation_closepar"
        app:layout_constraintTop_toTopOf="@id/guideline_result_area" />

    <Button
        android:id="@+id/button_operation_divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/button_operation_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_operation_percent"
        app:layout_constraintTop_toTopOf="@id/guideline_result_area" />

    <Button
        android:id="@+id/button_number_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/button_number_4"
        app:layout_constraintEnd_toStartOf="@+id/button_number_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_operation_openpar"/>

    <Button
        android:id="@+id/button_number_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/button_number_5"
        app:layout_constraintEnd_toStartOf="@+id/button_number_9"
        app:layout_constraintStart_toEndOf="@+id/button_number_7"
        app:layout_constraintTop_toBottomOf="@id/button_operation_closepar" />

    <Button
        android:id="@+id/button_number_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/button_number_6"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_multiply"
        app:layout_constraintStart_toEndOf="@+id/button_number_8"
        app:layout_constraintTop_toBottomOf="@id/button_operation_percent" />

    <Button
        android:id="@+id/button_operation_multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="x"
        app:layout_constraintBottom_toTopOf="@+id/button_operation_substract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_number_9"
        app:layout_constraintTop_toBottomOf="@id/button_operation_divide" />

    <Button
        android:id="@+id/button_number_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/button_number_1"
        app:layout_constraintEnd_toStartOf="@+id/button_number_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_number_7" />

    <Button
        android:id="@+id/button_number_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/button_number_2"
        app:layout_constraintEnd_toStartOf="@+id/button_number_6"
        app:layout_constraintStart_toEndOf="@+id/button_number_4"
        app:layout_constraintTop_toBottomOf="@+id/button_number_8" />

    <Button
        android:id="@+id/button_number_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/button_number_3"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_substract"
        app:layout_constraintStart_toEndOf="@+id/button_number_5"
        app:layout_constraintTop_toBottomOf="@+id/button_number_9" />

    <Button
        android:id="@+id/button_operation_substract"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button_operation_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_number_6"
        app:layout_constraintTop_toBottomOf="@+id/button_operation_multiply" />

    <Button
        android:id="@+id/button_number_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/button_number_dot"
        app:layout_constraintEnd_toStartOf="@+id/button_number_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_number_4" />

    <Button
        android:id="@+id/button_number_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/button_number_0"
        app:layout_constraintEnd_toStartOf="@+id/button_number_3"
        app:layout_constraintStart_toEndOf="@+id/button_number_1"
        app:layout_constraintTop_toBottomOf="@+id/button_number_5" />

    <Button
        android:id="@+id/button_number_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/button_operation_delete"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_add"
        app:layout_constraintStart_toEndOf="@+id/button_number_2"
        app:layout_constraintTop_toBottomOf="@+id/button_number_6" />

    <Button
        android:id="@+id/button_operation_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/button_operation_sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_number_3"
        app:layout_constraintTop_toBottomOf="@+id/button_operation_substract" />

    <Button
        android:id="@+id/button_number_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_number_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_number_1" />

    <Button
        android:id="@+id/button_number_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_delete"
        app:layout_constraintStart_toEndOf="@+id/button_number_dot"
        app:layout_constraintTop_toBottomOf="@+id/button_number_2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_operation_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="DEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_operation_sum"
        app:layout_constraintStart_toEndOf="@+id/button_number_0"
        app:layout_constraintTop_toBottomOf="@+id/button_number_3" />

    <Button
        android:id="@+id/button_operation_sum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_operation_delete"
        app:layout_constraintTop_toBottomOf="@+id/button_operation_add" />

</androidx.constraintlayout.widget.ConstraintLayout>